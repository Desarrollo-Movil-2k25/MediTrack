<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <!-- CONTENEDOR SCROLL (por si hay más datos en un futuro) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#4180ab"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvProfileUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#4180ab"
                android:layout_marginBottom="24dp" />

            <!-- ===== CAMPOS ACTUALIZABLES ===== -->

            <EditText
                android:id="@+id/txtEmail_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtFirstLastName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Primer Apellido"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtSecondLastName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Segundo Apellido"
                android:background="@drawable/rounded_corner"
                android:padding="18dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="24dp"
                android:inputType="textPersonName" />

            <!-- ACTUALIZAR PERFIL -->
            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4180ab"
                android:text="@string/save_content_ly"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- CERRAR SESIÓN -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d64545"
                android:text="@string/logout_content_ly"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER EXACTO DE MEDICATION ACTIVITY -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#4180ab"
        android:gravity="center"
        android:weightSum="3"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/home"
                app:tint="#ffffff"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_content_ly"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/medication_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/add_circle"
                app:tint="#ffffff"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medication_content_ly"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/person_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/person"
                app:tint="#ffffff"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_content_ly"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
